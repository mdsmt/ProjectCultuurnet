source "https://rubygems.org"

group :development do
  
  gem 'rb-inotify', :require => false
  gem 'rb-fsevent', :require => false
  gem 'rb-fchange', :require => false
  
  gem 'guard'                                     # watches application source files for changes
  gem 'guard-coffeescript'                        # compiles coffeescript source files to js
  gem 'guard-shell'                               # concatenates all javascript assets into `js/groundwork.all.js`
  gem 'guard-compass'                             # manages compilation of sass/scss source files
  gem 'sass'                                      # compiles sass/scss source files to css
  gem 'jade'                                      # compiles jade templates to html
  
  # Other awesome things you may want to use
  # gem 'uglifier'                                  # minifies javascript files
  # gem 'jasmine'                                   # jasmine javascript testing framework
  # gem 'csscss'                                    # a css redundancy analyzer that analyzes css for redunancy
  # gem 'guard-livereload'                          # auto-refresh your browser
  # gem 'guard-slim'                                # compiles slim templates to html
  # gem 'slim'                                      # compiles slim templates to html
  # gem 'jade'                                      # compiles jade templates to html
  # gem 'haml'                                      # compiles haml templates to html

end
